      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Test user registration",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "email": "test@example.com",
        "password": "password123",
        "name": "Test User"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "success": true,
        "user": {
          "email": "string",
          "name": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test user login",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "user": {
          "email": "string",
          "name": "string"
        }
      },
      "bodyMatcher": "partial"
    }
